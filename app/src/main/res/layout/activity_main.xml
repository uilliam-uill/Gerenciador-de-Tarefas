<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/listView"
        android:layout_width="405dp"
        android:layout_height="272dp"
        tools:layout_editor_absoluteX="3dp" />

    <EditText
        android:id="@+id/textTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="338dp" />

    <Spinner
        android:id="@+id/spineer"
        android:layout_width="170dp"
        android:layout_height="23dp"
        android:layout_marginTop="52dp"
        android:entries="@array/spinner_priority"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDate" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prioridade"
        app:layout_constraintEnd_toStartOf="@+id/spineer"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="502dp" />

    <Button
        android:id="@+id/buttonDate"
        android:layout_width="135dp"
        android:layout_height="38dp"
        android:text="Escolha data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textDate"
        tools:layout_editor_absoluteY="419dp" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="147dp"
        android:layout_height="50dp"
        android:text="Salvar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="38dp"
        android:layout_height="24dp"
        android:text="Data"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarefa"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="352dp" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="82dp"
        android:layout_height="17dp"
        android:text="Selecione"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        tools:layout_editor_absoluteY="430dp" />

    <Spinner
        android:id="@+id/spinnerView"
        android:layout_width="183dp"
        android:layout_height="28dp"
        android:entries="@array/spinner_view"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="277dp" />

    <Button
        android:id="@+id/buttonView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="visualizar"
        tools:layout_editor_absoluteX="209dp"
        tools:layout_editor_absoluteY="272dp" />

</androidx.constraintlayout.widget.ConstraintLayout>