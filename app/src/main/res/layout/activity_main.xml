<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ListView
        android:id="@+id/listView"
        android:layout_width="405dp"
        android:layout_height="272dp"
        tools:layout_editor_absoluteX="3dp" />

    <EditText
        android:id="@+id/textTask"
        android:layout_width="275dp"
        android:layout_height="48dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Digite a tarefa"
        android:inputType="text"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="317dp" />

    <Spinner
        android:id="@+id/spineer"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:entries="@array/spinner_priority"
        tools:layout_editor_absoluteX="230dp"
        tools:layout_editor_absoluteY="552dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prioridade"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="549dp" />

    <Button
        android:id="@+id/buttonDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Escolha data"
        tools:layout_editor_absoluteX="283dp"
        tools:layout_editor_absoluteY="402dp" />


    <Button
        android:id="@+id/buttonSave"
        android:layout_width="147dp"
        android:layout_height="50dp"
        android:text="Salvar"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="682dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="38dp"
        android:layout_height="24dp"
        android:text="Data"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="422dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarefa"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="336dp" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="82dp"
        android:layout_height="17dp"
        android:text="Selecione"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="426dp" />

    <Spinner
        android:id="@+id/spinnerView"
        android:layout_width="183dp"
        android:layout_height="48dp"
        android:entries="@array/spinner_view"
        tools:layout_editor_absoluteY="236dp" />


    <Button
        android:id="@+id/buttonView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="visualizar"
        tools:layout_editor_absoluteX="213dp"
        tools:layout_editor_absoluteY="233dp" />

    <EditText
        android:id="@+id/id_task"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="597dp" />

    <TextView
        android:id="@+id/textIdTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id da Tarefa"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="613dp" />

    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="294dp"
        tools:layout_editor_absoluteY="645dp" />

</androidx.constraintlayout.widget.ConstraintLayout>